#include "Pyuron.dtsi"

// 左側のキーマトリックス設定
&kscan0 {
    col-gpios
        = <&xiao_d 10 GPIO_ACTIVE_HIGH>
        , <&xiao_d 9 GPIO_ACTIVE_HIGH> 
        , <&xiao_d 8 GPIO_ACTIVE_HIGH> 
        , <&xiao_d 7 GPIO_ACTIVE_HIGH> 
        , <&gpio0 10 GPIO_ACTIVE_HIGH>
        ;
};

// 左側のSPI設定（トラックボール用）
&spi0 {
    status = "okay";
    cs-gpios = <&gpio0 9 GPIO_ACTIVE_LOW>;
};

// 左側のトラックボール設定（スクロール用）
&trackball {
    status = "okay";
    cpi = <400>;  // 左側は低感度でスクロール用
};

// 左側のトラックボール入力をスクロールとして処理
&trackball_listener {
    status = "okay";
    device = <&trackball_split>;
};
